map $request_uri $rot {
    "~admin" /var/www/html/admin;
    default /var/www/html/ems;
}

server {
	server_name ems.insyte.ru;
	
	root $rot;
	
	location /api/ {
		client_max_body_size 32M;

        	if ($request_method = 'OPTIONS') {
	            add_header 'Access-Control-Allow-Origin' '*' always;
        	    add_header 'Access-Cotnrol-Allow-Credentials' 'true';
	            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT, DELETE';
        	    add_header 'Access-Control-Allow-Headers' 'Origin,Content-Type,Accept,Authorization,If-Modified-Since,Pragma,Cache-Control';
	            add_header 'Access-Control-Max-Age' 1728000;
        	    add_header 'Content-Type' 'text/plain charset=UTF-8';
	            add_header 'Content-Length' 0;
        	    return 204;
	        }

        	if ($request_method = 'POST') {
                	add_header 'Access-Control-Allow-Origin' '*' always;
	                add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
        	        add_header 'Access-Control-Allow-Headers' 'Origin,Referer,DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
                	add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range';
	        }

	
        	if ($request_method = 'GET') {
	               	add_header 'Access-Control-Allow-Origin' '*' always;
        	        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
                	add_header 'Access-Control-Allow-Headers' 'Origin,Referer,DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
	                add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range';
        	}
		
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_pass http://127.0.0.1:8081/;
		proxy_read_timeout 120s;
	}

	location /papi/ {
		client_max_body_size 32M;

		proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_pass http://127.0.0.1:65000/;
                proxy_read_timeout 720s;
	}

	location / {
                try_files $uri $uri/ /index.html;
        }



    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/ems.insyte.ru/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/ems.insyte.ru/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = ems.insyte.ru) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	server_name ems.insyte.ru;
	
	listen 80;
    return 404; # managed by Certbot


}
